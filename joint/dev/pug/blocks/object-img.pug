section.object-img
	.object-img__wrap
		.object-img__flex

			.object-img__left
				.object-img__slider
					.object-img__slider-current
						figure
							img(src="./static/images/bauhaus/banners/1.jpg" alt="Название объекта")

					ul.object-img__slider-list.swiper-container
						.swiper-wrapper
							each val in [1, 2, 3, 4, 5, 6]
								li.object-img__slider-item.swiper-slide
									a(href="#")
										img(src=("http://lorempixel.com/800/800/nature/" + val) alt="Описание объекта")

						.swiper-button-next.object-img__slider-next
						.swiper-button-prev.object-img__slider-prev

			.object-img__right
				#map.object-img__map(data-x="59.82135121151628" data-y="30.326299667358402" data-hint="Название")
				button.btn.btn--attention.btn--upper.btn--big.btn--attention-line.btn--no-pl-pr.js--show-consult-popup
					| Получить консультацию по объекту
